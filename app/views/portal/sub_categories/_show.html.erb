<%= turbo_frame_tag "show_default_modal" do %>
  <div class="opacity-25 fixed inset-0 z-[60] bg-black" id="show-category-backdrop"></div>
  <div id='show-category' class="overflow-x-hidden flex overflow-y-auto fixed inset-0 z-[60] outline-none focus:outline-none justify-center items-center">
    <div class="relative w-full max-w-2xl max-h-full">
      <!-- Modal content -->
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <!-- Modal header -->
        <header class="flex justify-between p-4 border-b">
          <p class="text-lg font-semibold text-gray-700 dark:text-gray-300" onclick='toggleModal("show-category")'>
            Show Category
          </p>
          <button type='button' class="inline-flex items-center justify-center w-6 h-6 text-gray-400 transition-colors duration-150 rounded dark:hover:text-gray-200 hover: hover:text-gray-700" data-controller="toggle_modal" data-action="click->toggle_modal#toggleModal" data-toggle-modal-argument="show-category">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" role="img" aria-hidden="true" data-controller="toggle_modal" data-action="click->toggle_modal#toggleModal" data-toggle-modal-argument="show-category">
              <path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" fill-rule="evenodd"></path>
            </svg>
          </button>
        </header>
        <!-- Modal body -->
        <div class="p-4">
          <div class="w-full overflow-hidden rounded-lg shadow-xs border dark:border-gray-700 rounded-lg">
            <div class="w-full overflow-x-auto">
              <table class="w-full whitespace-no-wrap">
                <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800 md:text-sm">
                  <tr class="text-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700">
                    <th class="px-4 py-3 text-left border-r dark:border-gray-700">ID</th>
                    <td class="px-4 py-3"><%= @category.id %></td>
                  </tr>
                  <tr class="text-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700">
                    <th class="px-4 py-3 text-left border-r dark:border-gray-700">Name</th>
                    <td class="px-4 py-3"><%= @category.name %></td>
                  </tr>
                  <tr class="text-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700">
                    <th class="px-4 py-3 text-left border-r dark:border-gray-700">Created By</th>
                    <td class="px-4 py-3"><%= @category.created_by&.name %></td>
                  </tr>
                  <tr class="text-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700">
                    <th class="px-4 py-3 text-left border-r dark:border-gray-700">Created at</th>
                    <td class="px-4 py-3"><%= @category.created_at.strftime('%A, %d %b %Y %I:%M %p') %></td>
                  </tr>
                  <tr class="text-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700">
                    <th class="px-4 py-3 text-left border-r dark:border-gray-700">Updated at</th>
                    <td class="px-4 py-3"><%= @category.updated_at.strftime('%A, %d %b %Y %I:%M %p') %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <!-- Modal footer -->
        <footer class="flex flex-col items-center justify-end p-4 space-y-4 sm:space-y-0 sm:space-x-6 sm:flex-row bg-gray-50 dark:bg-gray-800 rounded-b-lg border-t">
          <button class="w-full px-5 py-3 font-medium leading-5 text-gray-700 transition-colors duration-150 border border-gray-300 rounded-lg dark:text-gray-400 sm:px-4 sm:py-2 sm:w-auto active:bg-transparent hover:border-gray-500 focus:border-gray-500 active:text-gray-500 focus:outline-none focus:shadow-outline-gray" data-controller="toggle_modal" data-action="click->toggle_modal#toggleModal" data-toggle-modal-argument="show-category">
            Cancel
          </button>
          <button class="w-full px-5 py-3 font-medium leading-5 text-white transition-colors duration-150 bg-cyan-600 border border-transparent rounded-lg sm:w-auto sm:px-4 sm:py-2 active:bg-cyan-600 hover:bg-cyan-700 focus:outline-none focus:shadow-outline-purple">
            Accept
          </button>
        </footer>
      </div>
    </div>
  </div>

<% end %>
