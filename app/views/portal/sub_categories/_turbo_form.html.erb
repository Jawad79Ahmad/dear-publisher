<%= form_with(url: url, model: sub_category, method: method) do |f| %>
  <div class='p-4 bg-white shadow-md dark:bg-gray-800'>
    <div class="block text-sm">
      <%= f.label :name, class: 'text-gray-700 dark:text-gray-400 font-semibold' %>
      <%= f.text_field :name, class: 'mt-1 block w-full rounded-lg border-gray-400  dark:border-gray-600 dark:bg-gray-700 focus:border-cyan-400 focus:outline-none focus:shadow-outline-cyan dark:text-gray-300 dark:focus:shadow-outline-gray form-input', placeholder: 'Name', required: true %>
    </div>

    <div class="block text-sm mt-4 <%= 'hidden' if params[:sub_category].present? && params[:sub_category][:category_id].present? %>">
      <%= f.label :category, class: 'text-gray-700 dark:text-gray-400 font-semibold' %>
      <%= f.select :category_id, options_for_select( Category.all.map{ |category| [category.name, category.id] }, params[:sub_category].present? ? params[:sub_category][:category_id] : ''), {include_blank: "Select Category"}, { class: "mt-1 block w-full rounded-lg border-gray-400  dark:border-gray-600 dark:bg-gray-700 focus:border-cyan-400 focus:outline-none focus:shadow-outline-cyan dark:text-gray-300 dark:focus:shadow-outline-gray form-input" } %>
    </div>
  </div>

  <footer class="flex flex-col items-center justify-end p-4 space-y-4 sm:space-y-0 sm:space-x-6 sm:flex-row bg-gray-50 dark:bg-gray-800 rounded-b-lg border-t">
    <button type='button' class="w-full px-5 py-3 font-medium leading-5 text-gray-700 transition-colors duration-150 border border-gray-300 rounded-lg dark:text-gray-400 sm:px-4 sm:py-2 sm:w-auto active:bg-transparent hover:border-gray-500 focus:border-gray-500 active:text-gray-500 focus:outline-none focus:shadow-outline-gray" data-controller="toggle_modal" data-action="click->toggle_modal#toggleModal" data-toggle-modal-argument="show-category">
      Cancel
    </button>
    <%= f.submit "#{method.eql?(:post) ? 'Create' : 'Update' } Sub Category", class: 'w-full px-5 py-3 font-medium leading-5 text-white transition-colors duration-150 bg-cyan-600 border border-transparent rounded-lg sm:w-auto sm:px-4 sm:py-2 active:bg-cyan-600 hover:bg-cyan-700 focus:outline-none focus:shadow-outline-cyan' %>
  </footer>
<% end %>
