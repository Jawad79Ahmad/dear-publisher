<div class="flex items-center min-h-screen p-6 bg-gray-50 dark:bg-gray-900">
  <div class="flex-1 h-full max-w-4xl mx-auto overflow-hidden bg-white rounded-lg shadow-xl dark:bg-gray-800">
    <div class="flex flex-col overflow-y-auto md:flex-row">
      <div class="h-32 md:h-auto md:w-1/2">
        <img aria-hidden="true" class="object-cover w-full h-full dark:hidden" src="<%= asset_path('forgot-password-office.jpeg')%>" alt="Office">
        <img aria-hidden="true" class="hidden object-cover w-full h-full dark:block" src="<%= asset_path('forgot-password-office-dark.jpeg')%>" alt="Office">
      </div>
      <div class="flex items-center justify-center p-6 sm:p-12 md:w-1/2">
        <div class="w-full">
          <h1 class="mb-4 text-xl font-semibold text-gray-700 dark:text-gray-200">
            Forgot password
          </h1>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="block text-sm">
              <%= f.label :email, class: 'text-gray-700 dark:text-gray-400' %>
              <%= f.email_field :email, class: 'block w-full mt-1 rounded-lg border-cyan-600 dark:border-gray-600 dark:bg-gray-700 focus:border-cyan-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input' %>
            </div>

            <div class="actions">
              <%= f.submit "Send me password reset instructions", class: 'block w-full px-4 py-2 mt-4 font-medium leading-5 text-center text-white transition-colors duration-150 bg-cyan-600 border border-transparent rounded-lg active:bg-cyan-600 hover:bg-cyan-700 focus:outline-none focus:shadow-outline-purple' %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
